{% trans_default_domain 'FOSUserBundle' %}

{% block profile_data %}
<div class="col-md-9">
    <div class="row">
        <div class="user_show">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {'class': 'fos_user_profile_edit'}}) }}

            <div class="text-center mb-3">
                <img src="{{ asset('images/frankenstein.png') }}" class="grays user-image">
            </div>

            <div class="form-group">
                {{ form_widget(form.username, { 'attr': {'class': 'form-control placeholder-no-fix marg', 'placeholder':'Username'} }) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'E-mail'} }) }}
                {% for errorItem in form.email.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form_widget(form.first_name, { 'attr': {'class': 'form-control', 'placeholder':'First Name'} }) }}
                {% for errorItem in form.email.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control', 'placeholder':'Phone'} }) }}
                {% for errorItem in form.email.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder':'Address'} }) }}
                {% for errorItem in form.email.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                {% endfor %}
            </div>

            {#<div class="form-group">#}
            {#{{ form_widget(form.current_password , { 'attr': {'class': 'form-control', 'placeholder':'Password'} }) }}#}
            {#{% for errorItem in form.email.vars.errors %}#}
            {#<span class="help-inline">{{ errorItem.message }}</span>#}
            {#{% endfor %}#}
            {#</div>#}

            <div>
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
            </div>

            {{ form_widget(form._token , { 'attr': {'class': 'hidden'} }) }}


        </div>
    </div>
</div>
{% endblock profile_data %}

