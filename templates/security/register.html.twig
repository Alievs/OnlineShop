{% extends 'base2.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login_register.css') }}">
{% endblock %}


{% block title %}Register{% endblock %}

{% block body %}
<!-- BEGIN REGISTRATION FORM -->
{{ form_start(registrationForm, {'method': 'post', 'attr': {'class': 'form-signin blank'}}) }}
{#novalidate= "novalidate"#}
<div class="text-center mb-3">
    <img src="{{ asset('images/frankenstein.png') }}" class="grays user-image">
</div>

<div class="form-group inp-line">
    {{ form_widget(registrationForm.firstName, { 'attr': {'class': 'form-control placeholder-no-fix marg', 'placeholder':'First name'} }) }}
    {#{% for errorItem in registrationForm.first_name.vars.errors %}#}
    {#<span class="help-inline">{{ errorItem.message }}</span>#}
    {#{% endfor %}#}

    {{ form_widget(registrationForm.phoneNumber, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Phone Number'} }) }}
    {#{% for errorItem in registrationForm.last_name.vars.errors %}#}
    {#<span class="help-inline">{{ errorItem.message }}</span>#}
    {#{% endfor %}#}
</div>

<div class="form-group">
    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder':'E-mail'} }) }}
    {% for errorItem in registrationForm.email.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>
<div class="form-group">
    {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'Password'} }) }}
    {% for errorItem in registrationForm.plainPassword.first.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>
<div class="form-group">
    {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'Repeat Password'} }) }}
    {% for errorItem in registrationForm.plainPassword.second.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>
<div class="form-group">
    {{ form_widget(registrationForm.agreeTerms) }}
    {#{% for errorItem in registrationForm.agreeTerms.vars.errors %}#}
    {#<span class="help-inline">{{ errorItem.message }}</span>#}
    {#{% endfor %}#}
</div>
<div class="form-actions text-center">
    <button type="submit" id="register-submit-btn" class="btn btn-success">Submit</button>
</div>
{{ form_rest(registrationForm) }}
{{ form_end(registrationForm) }}
<!-- END REGISTRATION FORM -->
{% endblock %}