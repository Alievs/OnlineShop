{% extends 'base2.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-1">
            </div>
            <div class="col-lg-2">

                <div class="list-group my-4">
                    {% for category in categorys %}
                        <a href="{{ path('category_toggle', {name: category.name}) }}" class="list-group-item text-center">{{ category.name }}</a>
                    {% endfor %}
                </div>

            </div>

            <div class="col-lg-9 mt-4">

                <div class="row">

                    {% for product in products %}

                        <div class="col-lg-3 col-md-4 col-sm-2 mb-4">
                            <div class="card h-100">
                                <a href="{{ path('product_show', {name: product.category.name, slug: product.slug}) }}"><img class="card-img-top" src="{{ asset(product.imageFilename|image_path) }}" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="{{ path('product_show', {name: product.category.name, slug: product.slug}) }}">{{ product.name }}</a>
                                    </h4>
                                    <h5>$24.99</h5>
                                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur! Lorem ipsum dolor sit amet.</p>
                                </div>
                                <div class="card-footer">
                                    <button class="btn-secondary js-buy-article">
                                        <i class="fa fa-shopping-cart icon-size buy-article"></i>
                                        <span class="b-text pl-2">Buy</span>
                                    </button>
                                    <i class="fa fa-heart-o like-article icon-size js-like-article pl-2"></i>
                                </div>
                            </div>
                        </div>

                    {% endfor %}

                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

            {#<div class="col-lg-1">#}
            {#</div>#}
        </div>

    </div>




{% endblock %}
